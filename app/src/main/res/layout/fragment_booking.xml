<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#F3F1F1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.booking.BookingFragment">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/view_all_massage_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_margin="20dp"
                android:elevation="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="O que pretende marcar?"
                        android:textColor="@color/darkTextColor"
                        android:layout_marginBottom="20dp"
                        android:textSize="20sp" />


                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGroup">

                        <RadioButton
                            android:id="@+id/radio_massage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Massagem"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="16dp"
                            android:textColor="@color/darkTextColor"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/radio_rehabilitation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reabilitação"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="16dp"
                            android:textColor="@color/darkTextColor"/>

                    </RadioGroup>

                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:icon="@drawable/ic_arrow_back"
                    android:text="Voltar"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/next1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:icon="@drawable/ic_arrow_forward"
                    app:iconGravity="end"

                    android:text="proximo" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


</RelativeLayout>